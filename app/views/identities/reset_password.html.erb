<% @parent_col_id = "reset-password" %>

<%= page_heading 'Reset Password' %>

<% if @handler_result.errors.any?{|error| error.code == :invalid_code || error.code == :expired_code} %>

  <p>Unfortunately, there was a problem with your password reset link.  If you continue to have problems, please contact support.</p>

<% else %>
  <div class="row">
    <div class="col-xs-12">
      <p>Use the form below to reset your password.</p>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">

      <% if !@handler_result.errors.has_offending_input? :code %>
        <%= lev_form_for :reset_password, url: '' do |f| %>
          <%= standard_field form: f, name: :password, type: :password_field, label: 'Password' %>
          <%= standard_field form: f, name: :password_confirmation, type: :password_field, label: 'Confirm Password' %>
          <%= hidden_field_tag :code, params[:code] %>
          <%= submit_tag 'Set Password', class: 'btn btn-primary' %>
        <% end %>
      <% end %>

    </div>
  </div>

<% end %>
